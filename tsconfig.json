{
  "compilerOptions": {
    "outDir": "./dist/",
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "lib": ["esnext", "dom"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "declaration": true,
    "noImplicitAny": true
  },
  "include": ["./src/**/*", "./tests/**/*", "dist/index.js", "index.js"],
  "exclude": ["./tests"]
}
